{
    "name": "@doenet/assignment-viewer",
    "private": false,
    "description": "View assignments from questions written in DoenetML",
    "version": "0.1.0-alpha9",
    "license": "AGPL-3.0-or-later",
    "homepage": "https://github.com/Doenet/assignment-viewer#readme",
    "type": "module",
    "repository": "github:Doenet/assignment-viewer",
    "files": [
        "/dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./*": {
            "import": "./dist/*",
            "require": "./dist/*"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "test": "vitest",
        "lint": "eslint .",
        "preview": "vite preview",
        "prettier:format": "prettier --write .",
        "prettier:check": "prettier --check ."
    },
    "peerDependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "@doenet/doenetml-iframe": "^0.7.0-beta16"
    },
    "dependencies": {
        "nanoid": "^5.1.6",
        "object-hash": "^3.0.0",
        "react-icons": "^5.5.0",
        "seedrandom": "^3.0.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/object-hash": "^3.0.6",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/seedrandom": "^3.0.8",
        "@vitejs/plugin-react-swc": "^4.2.2",
        "eslint": "^9.39.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "prettier": "^3.6.2",
        "rollup-plugin-visualizer": "^6.0.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0",
        "vite": "^7.2.6",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^4.0.14"
    },
    "prettier": {
        "tabWidth": 4
    }
}
