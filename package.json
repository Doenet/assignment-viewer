{
    "name": "@doenet/assignment-viewer",
    "private": false,
    "description": "View assignments from questions written in DoenetML",
    "version": "0.1.0-alpha7",
    "license": "AGPL-3.0-or-later",
    "homepage": "https://github.com/Doenet/assignment-viewer#readme",
    "type": "module",
    "repository": "github:Doenet/assignment-viewer",
    "files": [
        "/dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./*": {
            "import": "./dist/*",
            "require": "./dist/*"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "test": "vitest",
        "lint": "eslint .",
        "preview": "vite preview",
        "prettier:format": "prettier --write .",
        "prettier:check": "prettier --check ."
    },
    "peerDependencies": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "dependencies": {
        "@doenet/doenetml-iframe": "^0.7.0-alpha52",
        "nanoid": "^5.1.5",
        "object-hash": "^3.0.0",
        "react-icons": "^5.5.0",
        "seedrandom": "^3.0.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@types/object-hash": "^3.0.6",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@types/seedrandom": "^3.0.8",
        "@vitejs/plugin-react-swc": "^3.11.0",
        "eslint": "^9.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "rollup-plugin-visualizer": "^6.0.3",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.38.0",
        "vite": "^7.0.6",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^3.2.4"
    },
    "prettier": {
        "tabWidth": 4
    }
}
